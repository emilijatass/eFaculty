@model eFaculty.ViewModels.FullNameStudentIdVM

@{
    ViewData["Title"] = "Index";
}

<h1>Students</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Students" asp-action="Index" method="get">
    <p>
        Full Name: <input type="text" asp-for="SearchString" />
        StudentID: <select asp-for="StudentIndex" asp-items="Model.Indexes">
            <option value="">All</option>
        </select>

        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].StudentId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Students[0].EnrollmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].AcquiredCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].CurrentSemestar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].EducationLevel)
            </th>
            <th> @Html.DisplayNameFor(model => model.Students[0].Courses) </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
            <tr>
                <td>
                    @{ if (item.ProfilePicture != null)
                        {
                            <img src="~/images/@item.ProfilePicture"
                                 class="rounded-circle"
                                 height="40" width="40"
                                 asp-append-version="true" />}
                        @item.FullName
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcquiredCredits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrentSemestar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EducationLevel)
                </td>
                <td>
                    <a asp-action="StudentCourses" asp-route-id="@item.Id">Show Courses</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
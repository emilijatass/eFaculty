@model eFaculty.ViewModels.FullNameDegreeAcademicRankVM

@{
    ViewData["Title"] = "Index";
}


<h1>Teachers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Teachers" asp-action="Index" method="get">
    <p>
        Full Name: <input type="text" asp-for="SearchString" />
        Degree:<select asp-for="TeacherDegree" asp-items="Model.Degrees">
            <option value="">All</option>
        </select>
        Academic rank: <select asp-for="TeacherAcademicRank" asp-items="Model.AcademicRanges">
            <option value="">All</option>
        </select>

        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>


            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].Degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].AcademicRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].OfficeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].HireDate)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Teachers)
        {
            <tr>
                <td>
                    @{ if (item.ProfilePicture != null)
                        {
                            <img src="~/images/@item.ProfilePicture"
                                 class="rounded-circle"
                                 height="40" width="40"
                                 asp-append-version="true" />}

                        @item.FullName
                    }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Degree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcademicRank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HireDate)
                </td>
                <td>
                    <a asp-action="GetCourses" asp-route-id="@item.Id">View Courses</a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>